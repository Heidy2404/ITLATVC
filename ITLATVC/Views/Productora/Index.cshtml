@model List<Application.ViewModels.ProductoraViewModel>
@{
    ViewData["Title"] = "Home of Producers";
}
<div class="card border border-danger">
    <div class="container-fluid">
        <h1 class="titulo-rosa"> Productora </h1>
    </div>

</div>


<div class="container">
    <div class="row mb-4">
        <div class="col text-center ">
            <a asp-controller="Productora" asp-action="Crear" class="btn-modern">
                Crear <i class="fas fa-plus"></i>
            </a>
        </div>
    </div>

    <div class="row">
        @foreach (var producer in Model)
        {
            <div class="col-md-4 mb-4 series-container2">
                <div class="card shadow-sm border" style="background-color: #f5f5f5; color: #333;">
                    <div class="card-header">
                        <h4 class="card-title font-weight-bold">Nombre: @producer.Nombre</h4>
                    </div>
                    <div class="card-body p-3">
                        <a asp-controller="Productora" asp-action="Actualizar" asp-route-id="@producer.Id" class="btn btn-sm" style="background-image: linear-gradient(to right, #428bca 0%, #5cb85c 100%); color: #fff; border-radius: 5px;">
                            Edit <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a asp-controller="Productora" asp-action="EliminarProductora" asp-route-id="@producer.Id" class="btn btn-sm btn-danger" onclick="return confirmarEliminacion('@producer.Nombre')" style="border-radius: 5px;">
                            Delete <i class="fa-solid fa-delete-left"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function confirmarEliminacion(producerNombre) {
        return confirm(`¿Estás seguro que quieres eliminar la productora '${producerNombre}'? Si la eliminas, las series asociadas se eliminarán también.`);
    }
</script>
